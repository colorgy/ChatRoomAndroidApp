<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.colorgy.colorgychatapp.view.UserDetailInformationActivity">

    <ImageView
        android:id="@+id/userProfileImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="暱稱"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/userNicknameEditText"
        android:text="才不告訴逆雷"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="星座"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/userHoroscopeEditText"
        android:text="博愛座"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="學校"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/userSchoolTextView"
        android:text="國立臺灣科技大學"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="居住地"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/userHabitancyEditText"
        android:text="台灣"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="想聊的話題"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/userConversationEditText"
        android:text="嘿嘿嘿"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="現在熱衷的事情"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/userPassionEditText"
        android:text="寫程式"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="專精的事情"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/userExpertiseEditText"
        android:text="睡覺"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>